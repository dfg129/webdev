@import 'nib'

body
  background linear-gradient(top, yellow, red)

.top-nav
  display flex
  flex-flow row
  align-items center
  justify-content space-around
  width 95%
  border 1 solid orchid
  background plum

.top-nav > li > a
  font-family segoe ui,helvetica,arial,sans-serif
  font-size 24
  font-weight bold
  text-decoration none
  
.top-nav li 
  display inline-block
  background whitesmoke
  position relative

.top-nav > li:hover > a
  color royalblue
 
.top-nav li:hover .sub-nav
  visibility visible
 
.top-nav  li.active 
  color green

.top-nav > li > a
  border-left 1 solid black
  border-right 1 solid blueviolet
  border-bottom 1 solid black
  border-top 1 solid blueviolet

.sub-nav 
  position absolute
  align left
  width 100%
  visibility visible
  
.sub-nav > li > a 
  border 1 solid blueviolet
  border-top none
  font-size 18
  text-decoration none

.sub-nav > li:last-child a
  border-bottom 1 solid blueviolet

.sub-nav li:hover  
  visibility visible
  display block
  width 100%

.content
  height 250
  background lightgrey
  padding 10
  










@media screen and (min-width: 0px) and (max-width: 640px)
  nav
    flex-flow column